<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/ListItem.Header.Text"
                android:paddingLeft="@dimen/list_header_horizontal_margin"
                android:paddingTop="@dimen/list_header_vertical_margin"
                android:paddingRight="@dimen/list_header_horizontal_margin"
                android:paddingBottom="@dimen/list_header_vertical_margin">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/relative_day"
        style="@style/ListItem.Header.Text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/day"
        style="@style/ListItem.Header.Text"
        android:layout_toRightOf="@+id/relative_day"/>

</RelativeLayout>